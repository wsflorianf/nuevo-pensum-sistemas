<div id='modal-pdf' data-mode=''>
  <h2>Syllabus</h2>
  <svg
    id='boton-cerrar'
    width='800'
    height='800'
    viewBox='0 0 24 24'
    fill='none'
    xmlns='http://www.w3.org/2000/svg'
    ><g fill-rule='evenodd' clip-rule='evenodd'
      ><path
        d='M1.25 12C1.25 6.063 6.063 1.25 12 1.25S22.75 6.063 22.75 12 17.937 22.75 12 22.75 1.25 17.937 1.25 12Z'
        fill='#BFBFBF'></path><path
        d='M8.47 8.47a.75.75 0 0 1 1.06 0l6 6a.75.75 0 1 1-1.06 1.06l-6-6a.75.75 0 0 1 0-1.06Z'
        fill='#000'></path><path
        d='M15.53 8.47a.75.75 0 0 1 0 1.06l-6 6a.75.75 0 1 1-1.06-1.06l6-6a.75.75 0 0 1 1.06 0Z'
        fill='#000'></path></g
    ></svg
  >
</div>

<script>
  //Se envuelve el script en un eventListener de Astro para evitar la perdida de acción por las transiciones
  document.addEventListener('astro:page-load', () => {
    //eventListener para cuando se da en el botón cerrar
    document.querySelector('#boton-cerrar')?.addEventListener('click', () => {
      
      //Se muestra la scrollbar
      document.body.style.overflow = 'auto'
      const pdfView = document.querySelector('#modal-pdf')

      //Se establece en cerrada la ventana
      pdfView?.setAttribute('data-mode', 'close')

      const visualizador = pdfView?.lastChild
      
      //Se remueve el elemento cargado del modal
      if (visualizador) {
        pdfView?.removeChild(visualizador)
      }
    })
  })
</script>

<style>
  #modal-pdf {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    top: 10px;
    bottom: 0;
    left: 10px;
    right: 10px;
    margin: auto;
    padding: 10px;
    background-color: #343739;
    border-radius: 10px;
    color: #fff;
    box-shadow: 0 10px 10px 2px rgb(0, 0, 0, 0.6);
    opacity: 0;
    pointer-events: none;
    transition: 0.2s opacity ease-in;
  }

  #modal-pdf[data-mode='open'] {
    opacity: 1;
    pointer-events: all;
  }

  svg {
    position: absolute;
    top: 10px;
    right: 10px;
    height: 50px;
    width: 50px;
    transition: 0.2s all;
    border-radius: 100%;
  }

  svg:hover {
    cursor: pointer;
    transform: scale(1.05);
    box-shadow: 0 0 8px 0.5px rgb(0, 0, 0, 0.5);
  }

